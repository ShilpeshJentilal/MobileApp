<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/psedit"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnViewStates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:onClick="gotoDisplaySurveyStates"
        android:text="VIEW STATES"
        app:layout_constraintBottom_toBottomOf="@+id/txtsurveytitleinlist"
        app:layout_constraintStart_toEndOf="@+id/txtsurveytitleinlist"
        app:layout_constraintTop_toTopOf="@+id/txtsurveytitleinlist" />

    <TextView
        android:id="@+id/txtcountsurveylist"
        android:layout_width="32dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingTop="10dp"
        android:text="1)"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtsurveytitleinlist"
        android:layout_width="182dp"
        android:layout_height="59dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="example"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/txtcountsurveylist"
        app:layout_constraintTop_toTopOf="@+id/txtcountsurveylist" />
</androidx.constraintlayout.widget.ConstraintLayout>